<li>
  <header>
    Request Sent: {{booking.created}}
    <span>{{booking.booking_type}}</span>
  </header>
  <div class="img">
    {{# comment }}avatar {{/comment}}
    <a href="#"><img {{bindAttr src=booking.otherPerson.avatar alt=booking.otherPerson.full_name}}></a>
    <p><span><a href="#">{{booking.otherPerson.full_name}}</a></span></p>
    <div>
      <a href="#">0 mutual friends</a>
      <ul>
        <li>Friends you have in common</li>

        {{# comment }}
          {{each booking.parent.friends_in_common}}
          <li>{{# linkTo parent this }}<img src="/static/images/demo/img3.jpg" alt=""></a><span> {{full_name}}</span>{{/linkTo}}</li>
          {{/comment}}
      </ul>
    </div>
  </div>
  <div class="desc clear">
    <ul>
      <li><span class="icon_date">&nbsp;</span>{{booking.formattedDate}}&nbsp; <span>{{booking.formattedHours}}</span></li>
      <li><span class="icon_friends5">&nbsp;</span>{{booking.num_children}} {{booking.kidsString}}</li>
      <li><a {{bindAttr href=booking.googleMapsLink}} target="_blank"><span class="icon_pin3">&nbsp;</span>{{booking.address1}} {{booking.address2}} {{booking.city}}, {{booking.state}}</a></li>
      <li>
        <p><a {{bindAttr href=booking.otherPerson.mailTo}} >Need more info?<br>Email {{booking.otherPerson.first_name}}</a></p>
        <span class="icon_email2">&nbsp;</span><a {{bindAttr href=booking.otherPerson.mailTo}} >{{booking.otherPerson.email}}</a>
      </li>
    </ul>
    <div class="price">
      <span>
      </span>
      {{# if Sitterfied.isParent }}
      <a class="edit_button" {{action 'editBooking' booking }}>edit
      </a>
      {{/if}}
    </div>
    {{# if sitter_accepted }}
    <div class="btn_wrap">
      <a class="button button_smaller button_cancel" {{action 'cancel'}}>
        <span class="icon_cancel">&nbsp;
        </span>CANCEL
      </a>
    </div>
    {{ else }}
    <div class="btn_wrap">
      <a class="button button_smaller" {{action 'accept'}}>
        <span class="icon_ok2">&nbsp;
        </span>ACCEPT
      </a>
      <a class="button button_smaller button_cancel" {{action 'decline'}}>
        <span class="icon_cancel">&nbsp;
        </span>DECLINE
      </a>
    </div>
    {{/if }}
    <div class="note_wrap">
      <a {{action 'showNote'}}>
        {{# if isNoteShown}}
        <span class="show">Show</span>
        {{ else }}
        <span class="hide">Hide</span>
        {{/if}}
        Note
      </a>
    </div>
  </div>
  <div class="note_desc clear">
    <p>{{booking.note}}</p>
  </div>
  <footer>
    Request Sent: {{booking.created}}
  </footer>
</li>
