<li>
  {{#if Sitterfied.currentUser.isParent}}
    <div {{action bookmark this}} {{bindAttr class=":bookmark isBookmarked:active"}}>
    </div>
  {{/if}}
  <div class="tit">
    <span><strong>${{one_child_min_rate}}</strong> /hr</span>
    {{#linkTo sitter this.sitter}}{{full_name}}{{/linkTo}}
  </div>
  <div class="img">
    {{#if Sitterfied.currentUser.isParent}}
      <div {{action addSitterTeam this}} {{bindAttr class="inSitterTeam:active :heart" }}>
      </div>
    {{/if}}
    {{#linkTo sitter this.sitter}}
      <img {{bindAttr src=avatarUrl alt=full_name}} />
    {{/linkTo}}
    {{# if id_verified }}
      <span>Background Cleared</span>
      {{/if}}
  </div>
  <ul>
    <li>
      <span class="icon_recommend2">&nbsp;</span>
      {{recommends.length}} recommends
      {{#if recommends}}
        <ul>
	      <li>Recommendations</li>
          {{# each recommends }}
	        <li>
	          {{#linkTo parent this.parent}}
	            <img {{bindAttr src=this.parent.avatarUrl}}  />
	          {{/linkTo}}
	          <span>{{this.parent.full_name}}</span>
	        </li>
            {{/each}}
        </ul>
      {{/if}}
    </li>
    <li>
      <span class="icon_team3">&nbsp;</span>
      {{sitter_teams.length}} sitter teams
      {{# if sitter_teams}}
        <ul>
	      <li>Added to sitter teams and repeatedly hired</li>
	      {{# each sitter_teams }}
	        <li>
	          {{#linkTo parent this.parent}}
	            <img {{bindAttr src=avatarUrl}}  />
	          {{/linkTo}}
	          <span>{{full_name}}</span>
	        </li>
	        {{/each}}
        </ul>
        {{/if}}
    </li>
    <li>
      <span class="icon_reviews">&nbsp;</span>
      {{reviews.length}} reviews
      {{#if reviews}}
        <ul>
	    <li class="rev clear">
	      {{#linkTo parent recentReview.parent}}
		<img {{bindAttr src=avatarUrl}}  />
	      {{/linkTo}}
	      <div>
		<p>{{recentReview.shortenReview}}</p>
	        <p>{{#linkTo sitter sitter.sitter}}Read more reviews {{/linkTo}}</p>
	      </div>
	    </li>
        </ul>
      {{/if}}
    </li>
	
    <li>
      <span class="icon_pin3">&nbsp;</span>
      <span class="sitter_card_address">{{city}}, {{state}}</span>
    </li>
  </ul>
  <div class="btns clear">
    {{# if parentController.multipleSitters }}
      <div class="select_wrap" {{action "selectSitter" this}}>
        <input type="checkbox" {{bindAttr checked=isSelected}} class="select5" />
        <label>
          {{# if isSelected }}
            Unselect
          {{ else }}
            Select
          {{/ if}}
        </label>
      </div>
    {{else}}
      {{#if Sitterfied.currentUser.isParent}}
        <a class="button" {{action book this}}>
	      BOOK
        </a>
        <a class="button button2" {{action open_interview_popup this}}>
	      INTERVIEW
        </a>
        <p>
	      <a {{action addSitterTeam this}}>
	        ADD TO SITTER TEAM
	      </a>
        </p>
      {{/if}}
    {{/ if}}
    {{#if Sitterfied.currentUser.isParent}}
      <p>
        <a {{action bookmark this}}>
	      {{# if isBookmarked}}
	        REMOVE 
	      {{/ if}}
	      BOOKMARK
        </a>
      </p>
    {{/if}}
  </div>
</li>

