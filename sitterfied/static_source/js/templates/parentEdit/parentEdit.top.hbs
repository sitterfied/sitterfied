{{# linkTo search class="back"}}Back to search results{{/ linkTo }}
<!-- top info -->
<div class="top_info clear">
  <div class="member_since">{{memberSince}}</div>
  <div class="photo">
	<div class="photo_edit_wrap">
	  <img {{bindAttr src=avatarUrl}} alt="" />
	  {{# view Sitterfied.photoPopupView }}
        <span class="icon_pen">&nbsp;</span>
        <a>Edit Photo</a>
      {{/ view }}
	</div>
  </div>
  <div class="guest_top_info">
	<p>{{full_name}}</p>
	<p>Hi {{first_name}}, you have <strong>{{myFriends.length}}</strong> friends and and belong to <strong>{{sitter_groups.length}}</strong> groups on Sitterfied</p>
	<ul class="clear">
	  <li><p><a href="#" class="facebook">&nbsp;</a><a href="#" class="gmail">&nbsp;</a></p><a href="#">Connect</a></li>
	  <li><p><a href="#" class="search">&nbsp;</a></p><a href="#">Search for Friends</a></li>
	  <li><p><a href="#" class="letter">&nbsp;</a></p><a href="#">Invite Friends</a></li>
	</ul>
	<p class="hide"><a href="#">Hide</a></p>
	<p class="show"><a href="#">Show</a></p>
  </div>
</div>
<!-- /top info -->
<!-- quick_info_list -->
{{# view Sitterfied.FixedView class="quick_info_list clear" id="fixed_tabs" }}
  <ul>
	{{#if facebook_id}}<li><strong>&nbsp;</strong>Facebook connected</li>{{/if}}
	<li><strong>{{sitter_teams.length}}</strong> sitters on your team</li>
	<li><strong>{{bookings.length}}</strong> bookings</li>
	<li><strong>{{weeks_since_last_booking}}</strong> weeks &amp; <strong>{{days_since_last_booking}}</strong> days since your last booking</li>
  </ul>
{{/ view}}