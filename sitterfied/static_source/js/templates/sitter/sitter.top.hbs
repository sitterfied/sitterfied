{{# if Sitterfied.isSitter}}
  {{# linkTo sitterEdit.profile Sitterfied.currentUser class="back" }}Back to edit profile{{/linkTo}}
{{/ if}}
<div class="top_info clear">
  {{# if Sitterfied.isParent}}
    <div {{action bookmark this}}{{bindAttr class=":bookmark isBookmarked:active"}}></div>
  {{/ if}}
  <div class="member_since">{{memberSince}}</div>
  <div class="photo">
    {{# if Sitterfied.isParent}}
	<div {{action addSitterTeam this}} class="heart_wrap">
	  <div {{bindAttr class="inSitterTeam:active :heart"}}></div>
	  <span>Add to my sitter team</span>
	</div>
    {{/ if}}
	<img {{bindAttr src="avatarUrl"}} alt="" />
  </div>
  <div class="desc">
    {{# if Sitterfied.isParent}}
	  <p class="sitter_profile_buttons"><a class="button" {{action book}}>BOOK</a><a class="button button2" {{action open_interview_popup}}>INTERVIEW</a></p>
    {{/ if}}
	<p><span>Hi, I'm <strong>{{full_name}}</strong></span></p>
    <span class="short_bio">{{shortBio}}
    {{#if showBioLink }}
      <a class="read_more"{{action "readMore" target="view"}}>Read More</a>
    {{/ if}}
    </span>
	<div class="full_desc">
      {{# each p in biographyPList }}
	    <p>{{p}}</p>
      {{/ each}}
	</div>
  </div>
  <div class="ico">
	<ul>
	  {{# view Sitterfied.PopUpView contentBinding=friends_in_common }}
        <span class="icon_friends">&nbsp;</span>
        <span class="number">{{friends_in_common.length}}</span>
        mutual friends
	    <ul>
		  <li>Friends you have in common with {{first_name}}</li>
          {{# each friend in friends_in_common}}
		    <li>
              {{# linkTo parent friend.parent}}
                <img {{bindAttr src="friend.avatarUrl"}} alt="" />
              {{/ linkTo}}
              <span>{{friend.full_name}}</span>
            </li>
		  {{/ each}}
	    </ul>
	  {{/ view}}
      {{# view Sitterfied.PopUpView contentBinding=recommends }}
          <span class="icon_recommend">&nbsp;</span><span class="number">{{recommends.length}}</span>recommends
	      <ul>
            <li>Friends who recommend {{first_name}}</li>
            {{# each reccomend in recommends}}
		      <li>
                {{# linkTo parent reccomend.parent.parent}}
                  <img {{bindAttr src="reccomend.parent.avatarUrl"}} alt="" />
                {{/ linkTo}}
                <span>{{reccomend.parent.full_name}}</span>
              </li>
		    {{/ each}}
	      </ul>
	  {{/ view}}
	  {{# view Sitterfied.PopUpView contentBinding=sitter_teams }}
        <span class="icon_team">&nbsp;</span><span class="number">{{sitter_teams.length}}</span>sitter teams
	  <ul>
		<li>Friends who added {{first_name}} to their sitter team</li>
        {{# each friend in sitter_teams}}
		  <li>
            {{# linkTo parent friend.parent}}
              <img {{bindAttr src="friend.avatarUrl"}} alt="" />
            {{/ linkTo}}
            <span>{{friend.full_name}}</span>
          </li>
		{{/ each}}
	  </ul>
	  {{/ view}}
	</ul>
  </div>
</div>

