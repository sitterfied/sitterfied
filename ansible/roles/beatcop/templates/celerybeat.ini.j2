[redis]
host = {{ beatcop_redis_host }}
port = {{ beatcop_redis_port }}

[beatcop]
# Lock timeout in milliseconds. Higher values mean it will take longer before a downed node is recognized, lower values mean more Redis traffic
timeout = {{ beatcop_timeout }}

# Name of the lock. If empty, generated from the command
lockname = {{ beatcop_lockname }}

# Command to execute
command = {{ api_virtualenv_bin }}/celery beat --app={{ celerybeat_app }} --schedule={{ celerybeat_schedule }} -f {{ celerybeat_logfile }} --loglevel=INFO --workdir={{ api_root }} --pidfile={{ celerybeat_pidfile }}

# If you want above command to run in a shell or directly
shell = {{ beatcop_use_shell }}
