description "BeatCop Service"
author "Andrew Lewisohn <alewisohn@sitterfied.com>"

# When to start the service
start on virtual-filesystems

# When to stop the service
stop on runlevel [06]

# Automatically restart process if crashed
respawn

# Run before process
pre-start script
    [ -d /var/run/beatcop ] || mkdir -p /var/run/beatcop
end script

env PYTHONPATH={{ api_root }}
env DJANGO_SETTINGS_MODULE=sitterfied.settings.{{ env }}

# Start the process
exec {{ api_virtualenv_bin }}/python {{ api_virtualenv_bin}}/beatcop /etc/beatcop.d/celerybeat.ini >> /var/log/beatcop.log 2>&1

# Run after start
post-start script
    PID=`status beatcop | egrep -oi '([0-9]+)$' | head -n1`
    echo $PID > /var/run/beatcop/beatcop.pid
end script

# Run after stop
post-stop script
    rm -f /var/run/beatcop/beatcop.pid
end script